<%= form_for @bid_request, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :pick_up_street, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :pick_up_street, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pick_up_city_state, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :pick_up_city_state, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pick_up_zip, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :pick_up_zip, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :drop_off_street, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :drop_off_street, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :drop_off_city_state, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :drop_off_city_state, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :drop_off_zip, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :drop_off_zip, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pick_up_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :pick_up_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pick_up_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.time_select :pick_up_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :drop_off_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :drop_off_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :drop_off_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.time_select :drop_off_time, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  bid_requests_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

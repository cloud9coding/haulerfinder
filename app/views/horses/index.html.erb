<h1>Listing horses</h1>

<table>
  <thead>
    <tr>
      <th>Breed</th>
      <th>Age</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Bid request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horses.each do |horse| %>
      <tr>
        <td><%= horse.breed %></td>
        <td><%= horse.age %></td>
        <td><%= horse.height %></td>
        <td><%= horse.weight %></td>
        <td><%= horse.bid_request %></td>
        <td><%= link_to 'Show', horse %></td>
        <td><%= link_to 'Edit', edit_horse_path(horse) %></td>
        <td><%= link_to 'Destroy', horse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Horse', new_horse_path %>
